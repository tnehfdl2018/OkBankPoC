<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_003"
    tools:context=".Okpoc_0003">


    <include layout="@layout/layout_common_toolbar" />

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_006"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constAllCheck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/all_agree_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDivider">

        <CheckBox
            android:id="@+id/checkAllAgree"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/btn_all_check_nor"
            android:buttonTint="@color/color_014"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtAllAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/okpoc_0003_str_001"
            android:textColor="@color/color_005"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/checkAllAgree"
            app:layout_constraintBottom_toBottomOf="@+id/checkAllAgree"
            app:layout_constraintStart_toEndOf="@+id/checkAllAgree"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <CheckBox
        android:id="@+id/checkIdentification"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_check_nor"
        android:buttonTint="@color/color_014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constAllCheck" />

    <TextView
        android:id="@+id/txtIdentification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/okpoc_0003_str_002"
        android:textColor="@color/color_005"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/checkIdentification"
        app:layout_constraintStart_toEndOf="@+id/checkIdentification"
        app:layout_constraintTop_toTopOf="@+id/checkIdentification" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_agree_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/checkIdentification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkIdentification" />

    <CheckBox
        android:id="@+id/checkUniqueIdentification"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_check_nor"
        android:buttonTint="@color/color_014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkIdentification" />

    <TextView
        android:id="@+id/txtUniqueIdentification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/okpoc_0003_str_003"
        android:textColor="@color/color_005"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/checkUniqueIdentification"
        app:layout_constraintStart_toEndOf="@+id/checkUniqueIdentification"
        app:layout_constraintTop_toTopOf="@+id/checkUniqueIdentification" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_agree_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/checkUniqueIdentification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkUniqueIdentification" />

    <CheckBox
        android:id="@+id/checkMobileOperator"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_check_nor"
        android:buttonTint="@color/color_014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkUniqueIdentification" />

    <TextView
        android:id="@+id/txtMobileOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/okpoc_0003_str_004"
        android:textColor="@color/color_005"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/checkMobileOperator"
        app:layout_constraintStart_toEndOf="@+id/checkMobileOperator"
        app:layout_constraintTop_toTopOf="@+id/checkMobileOperator" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_agree_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/checkMobileOperator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkMobileOperator" />

    <CheckBox
        android:id="@+id/checkPersonalInformation"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_check_nor"
        android:buttonTint="@color/color_014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkMobileOperator" />

    <TextView
        android:id="@+id/txtPersonalInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/okpoc_0003_str_005"
        android:textColor="@color/color_005"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/checkPersonalInformation"
        app:layout_constraintStart_toEndOf="@+id/checkPersonalInformation"
        app:layout_constraintTop_toTopOf="@+id/checkPersonalInformation" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_agree_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/checkPersonalInformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkPersonalInformation" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:lineSpacingExtra="6sp"
        android:text="@string/okpoc_0003_str_006"
        android:textColor="@color/color_008"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkPersonalInformation" />

    <EditText
        android:id="@+id/etInputName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_bg"
        android:hint="@string/okpoc_0003_str_007"
        android:textColor="@color/color_005"
        android:textSize="15sp"
        android:textStyle="normal"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />

    <View
        android:id="@+id/viewDivider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_010"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etInputName" />

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="6sp"
        android:text="@string/okpoc_0003_str_008"
        android:textColor="@color/color_008"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDivider2" />

    <Spinner
        android:id="@+id/spinnerPhoneOperator"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/edit_text_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPhone" />

    <View
        android:id="@+id/viewDivider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="@color/color_010"
        app:layout_constraintEnd_toEndOf="@+id/spinnerPhoneOperator"
        app:layout_constraintStart_toStartOf="@id/spinnerPhoneOperator"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPhoneOperator" />

    <EditText
        android:id="@+id/etInputPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_bg"
        android:hint="@string/okpoc_0003_str_010"
        android:textColor="@color/color_005"
        android:textSize="15sp"
        android:textStyle="normal"
        android:inputType="phone"
        android:digits="0123456789"
        android:imeOptions="actionDone"
        android:maxLength="11"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerPhoneOperator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerPhoneOperator"
        app:layout_constraintTop_toTopOf="@+id/spinnerPhoneOperator" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_phone_arrow"
        app:layout_constraintTop_toTopOf="@+id/spinnerPhoneOperator"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerPhoneOperator"
        app:layout_constraintEnd_toEndOf="@+id/spinnerPhoneOperator"/>

    <View
        android:id="@+id/viewDivider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_010"
        app:layout_constraintBottom_toBottomOf="@+id/viewDivider3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewDivider3"
        app:layout_constraintTop_toTopOf="@+id/viewDivider3" />


    <TextView
        android:id="@+id/txtAuthNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:lineSpacingExtra="6sp"
        android:text="@string/okpoc_0003_str_011"
        android:textColor="@color/color_008"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDivider4" />

    <EditText
        android:id="@+id/etInputAuthNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:paddingEnd="60dp"
        android:background="@drawable/edit_text_bg"
        android:hint="@string/okpoc_0003_str_012"
        android:textColor="@color/color_005"
        android:textSize="15sp"
        android:textStyle="normal"
        android:inputType="numberDecimal"
        android:digits="0123456789"
        android:enabled="false"
        app:layout_constraintEnd_toStartOf="@+id/btnSendAuthNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAuthNum" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/etInputAuthNum"
        app:layout_constraintBottom_toBottomOf="@+id/etInputAuthNum"
        app:layout_constraintEnd_toEndOf="@+id/etInputAuthNum"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/imgClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_clock"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/color_004"
            android:lineSpacingExtra="6sp"
            android:text="03:00"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@+id/imgClock"
            app:layout_constraintBottom_toBottomOf="@+id/imgClock"
            app:layout_constraintStart_toEndOf="@+id/imgClock"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/viewDivider5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_010"
        app:layout_constraintEnd_toStartOf="@+id/btnSendAuthNum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etInputAuthNum" />

    <Button
        android:id="@+id/btnSendAuthNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/okpoc_0003_str_013"
        android:textColor="@color/color_003"
        android:textSize="14sp"
        android:textStyle="normal"
        android:enabled="false"
        android:background="@drawable/btn_disabled_bg"
        app:layout_constraintBottom_toBottomOf="@+id/etInputAuthNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etInputAuthNum" />


    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:lineSpacingExtra="18sp"
        android:text="@string/okpoc_0003_str_014"
        android:textColor="@color/color_003"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>