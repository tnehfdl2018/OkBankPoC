<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Okpoc_0002">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/img_intro_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imgTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/img_intro_title"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/viewDivider"
        android:layout_width="30dp"
        android:layout_height="4dp"
        android:background="@color/color_002"
        android:layout_marginTop="22dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imgTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/color_001"
        android:text="@string/okpoc_0002_str_001"
        android:layout_marginTop="22dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/viewDivider"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnAppStart"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="46dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/color_003"
        android:text="@string/okpoc_0002_str_002"
        android:background="@drawable/enabled_btn_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>