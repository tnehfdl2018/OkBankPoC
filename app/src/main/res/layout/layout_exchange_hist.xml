<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txtExchangeDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="13sp"
        android:textColor="@color/color_008"
        android:background="@color/color_007"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="01.29 (í† )"/>

    <TextView
        android:id="@+id/txtHistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="@color/color_005"
        android:text="@string/okpoc_0012_str_006"
        android:lineSpacingExtra="7sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtExchangeDate"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtExchangePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/color_005"
        android:lineSpacingExtra="7sp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="@+id/txtHistTitle"
        app:layout_constraintBottom_toBottomOf="@+id/txtHistTitle"
        app:layout_constraintEnd_toStartOf="@+id/txtP"
        tools:text="2,300"/>

    <TextView
        android:id="@+id/txtP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/color_005"
        android:text="@string/okpoc_0012_str_003"
        android:lineSpacingExtra="7sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtExchangePoint"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtExchangeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/color_001"
        android:layout_marginTop="6dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtHistTitle"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="17:36"/>

    <TextView
        android:id="@+id/txtExchangeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/color_001"
        android:text="@string/okpoc_0012_str_007"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/txtExchangeTime"
        app:layout_constraintBottom_toBottomOf="@+id/txtExchangeTime"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="19dp"
        android:background="@color/color_010"
        app:layout_constraintTop_toBottomOf="@+id/txtExchangeTime" />



</androidx.constraintlayout.widget.ConstraintLayout>